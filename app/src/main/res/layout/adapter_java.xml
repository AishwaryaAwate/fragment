<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/relative_layout">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.fragmenttask.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imageViewJava"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_marginRight="10dp"
                app:civ_border_color="#ffffff"
                app:civ_border_width="2dp" />


            <!-- <TextView
                 android:layout_width="96dp"
                 android:layout_height="96dp"
                 android:layout_marginRight="10dp"
                 android:text="T"
                 android:id="@+id/text_picture"import com.google.gson.annotations.SerializedName;
                 android:visibility="gone"
                 android:textSize="50dp"
                 android:gravity="center"
                 />-->

            <TextView
                android:id="@+id/text_from"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/imageViewJava"
                android:hint="From"
                android:textColor="#000000"
                android:textSize="20dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/text_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_from"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/imageViewJava"
                android:ellipsize="end"
                android:hint="Subject"
                android:maxLines="1"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_messege"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_subject"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/imageViewJava"
                android:ellipsize="end"
                android:hint="Message"
                android:maxLines="1" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>